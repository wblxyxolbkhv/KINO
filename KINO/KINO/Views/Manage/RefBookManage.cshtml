@{
    ViewBag.Title = "Просмотр справочников";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2> Справочники</h2>
<div class="container">

    <div class="row" >
        <div class="col-md-6">
        <h3>Жанры</h3>
        <hr />

        <table class="table" >
            <thead>
                <tr>
                    <th>Название</th>
                </tr>
            </thead>
            <tbody>
                @foreach (KINO.Models.Genre genre in ViewBag.Genres)
                {
                    <tr>
                        <td>
                            @genre.Name
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>

        <div class="col-md-6">
        <h3>Страны</h3>
        <hr />

        <table class="table">
            <thead>
                <tr>
                    <th>Название</th>
                </tr>
            </thead>
            <tbody>
                @foreach (KINO.Models.Country country in ViewBag.Countries)
                {
                    <tr>
                        <td>
                            @country.Name
                        </td>
                    </tr>
                }
            </tbody>
        </table>
            </div>
    </div>

    <div class="row">
        <div class="col-md-5">
        <h3>Возрастные ограничения</h3>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Значение</th>
                </tr>
            </thead>
            <tbody>
                @foreach (KINO.Models.AgeLimit ageLimits in ViewBag.AgeLimits)
                {
                    <tr>
                        <td>
                            @ageLimits.Value
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

        <div class="col-md-7" >
    <h3>Режиссеры</h3>
    <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Имя</th>
                    <th>Фамилия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (KINO.Models.Director directors in ViewBag.Directors)
                {
                    <tr>
                        <td>
                            @directors.Name
                        </td>
                        <td>
                            @directors.Surname
                        </td>
                    </tr>
                }
            </tbody>
        </table>
            </div>
    </div>

</div>




